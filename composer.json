{
    "name": "shieldfy/shieldfy-php",
    "type": "library",
    "description": "Shieldfy Official PHP SDK - (shieldfy.io)",
    "keywords": [
        "shieldfy",
        "shieldfy-php",
        "waf",
        "firewall",
        "security"
    ],
    "homepage": "https://github.com/shieldfy/shieldfy-php",
    "license": "SCL",
    "authors": [
        {
            "name": "Shieldfy Inc.",
            "email": "team@shieldfy.io",
            "homepage": "https://shieldfy.io"
        }
    ],
    "require": {
        "php" : "~5.5|~7.0",
        "ext-curl": "*",
        "ext-uopz":"*",
        "ext-runkit": "*"
    },
    "require-dev": {
        "phpunit/phpunit" : "~5.0||~6.0",
        "mikey179/vfsStream":"^1.6",
        "phpdocumentor/phpdocumentor":"2.*",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "files": [
            "src/Loader.php"
        ],
        "psr-4": {
            "Shieldfy\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Shieldfy\\": "tests"
        }
    },
    "scripts": {
        "pre-install-cmd":"@php -r \"echo (extension_loaded('uopz'))?:' --------- Run UOPZ First ---------';\"",
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
